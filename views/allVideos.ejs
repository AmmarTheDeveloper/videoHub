<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>All Videos</title>
  </head>
  <body class="pt-[100px]">
    <%- include('./partials/header') %>
    <div class="relative overflow-x-auto">
      <table
        class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400"
      >
        <thead
          class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
        >
          <tr>
            <th scope="col" class="px-6 py-3">Sr No</th>
            <th scope="col" class="px-6 py-3">Video</th>
            <th scope="col" class="px-6 py-3">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if(files.length != 0){ %> <% files.forEach((file , index) =>{ %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <td class="px-6 py-4"><%= index + 1 %></td>
            <td class="px-6 py-4">
              <a href="http://localhost:9090/uploads/<%= file  %>"
                ><%= file %></a
              >
            </td>
            <td class="px-6 py-4">
              <button
                type="button"
                data-file="<%= file %>"
                class="delete-btn mt-[10px] focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900"
              >
                Delete
              </button>
            </td>
          </tr>
          <% }) %> <% }else{ %>

          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <td colspan="3" class="text-center px-6 py-3">No Files Uploaded</td>
          </tr>

          <% } %>
        </tbody>
      </table>
    </div>
    <script src="./js/delete-video.js"></script>
  </body>
</html>
